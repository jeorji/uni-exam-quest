<Page x:Class="UI.View.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:UI.View"
      xmlns:vm="clr-namespace:UI.ViewModel"
      mc:Ignorable="d"
      Title="GamePage" Height="600" Width="800">

    <Page.DataContext>
        <vm:GamePage/>
    </Page.DataContext>

    <Grid>
        <Label Content="Тебя звать" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,264,0,0"/>
        <Label Content="{Binding PlayerName}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</Page>
