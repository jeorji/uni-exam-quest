<Page x:Class="UI.View.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:UI.View"
      xmlns:vm="clr-namespace:UI.ViewModel"
      mc:Ignorable="d"
      Title="GamePage" Height="600" Width="400">

    <Page.DataContext>
        <vm:GamePage/>
    </Page.DataContext>

    <Grid>

        <Frame Source="{Binding CurrentPage}" Margin="0,0,0,50" />
        <Button Content="🛍" FontSize="18" Command="{Binding ShowPage}" CommandParameter="StorePage" Margin="10,563,270,10" />
        <Button Content="👨" FontSize="18" Command="{Binding ShowPage}" CommandParameter="PlayerPage" Margin="140,563,140,10" />
        <Button Content="📚" FontSize="18" Command="{Binding ShowPage}" CommandParameter="QuestPage" Margin="270,563,10,10" />

        </Grid>
</Page>
